        header .dropdown-menu .container {
            width: 100%;
            max-width: none;
            padding: 0;
        }

        header .dropdown-menu .row {
            display: flex;
            flex-wrap: wrap;
            margin: 0 -10px;
        }

        header .dropdown-menu [class*="col-"] {
            padding: 0 10px;
            flex: 1 0 0%;
            width: auto;
            max-width: none;
        }

        header .dropdown-menu .dropdown-item {
            white-space: normal;
            display: block;
            width: 100%;
            padding: 5px 0;
        }

        
        .click-dropdown .dropdown-menu {
            width: auto !important;
            white-space: normal;
            padding: 10px 0;
            word-wrap: break-word;
            overflow-wrap: break-word;
            display: block;
        }

        .click-dropdown.show .dropdown-menu {
            display: block;
        }

        .navbar .dropdown-menu .dropdown-item {
            white-space: normal !important;
            overflow: hidden;
            text-overflow: clip;
            display: flex;
            align-items: center;
            width: auto !important;
            padding: 5px 10px;
            line-height: 1.4;
        }

        /* Стили для выпадающих шторок (по наведению) */
        .hover-dropdown .dropdown-menu {
            width: auto !important;
            min-width: 220px;
            max-width: 500px;
            white-space: normal;
            padding: 10px;
            word-wrap: break-word;
            overflow-wrap: break-word;
        }

        .hover-dropdown:hover .dropdown-menu {
            display: block;
        }

        
        .mega-menu .container .row .col-md-3 {
            width: auto;
            max-width: 500px;
        }

        .mega-menu .dropdown-item {
            white-space: normal !important;
            overflow: hidden;
            text-overflow: clip;
            display: flex;
            align-items: center;
            max-width: 100%;
            line-height: 1.4;
        }

        .mega-menu .dropdown-item {
            margin-bottom: 8px;
        }

            .mega-menu .dropdown-item:hover {
                background: transparent;
                color: #dc3545;
            }

        
        .nav-item.active .nav-link,
        .nav-item.active .dropdown-toggle {
            color: #dc3545 !important;
            font-weight: 500;
        }

        
        .dropdown-menu {
            transition: all 0.3s ease;
        }

    </style>
