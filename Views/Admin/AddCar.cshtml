@model CarSalesSite.Models.Car

@{
    ViewData["Title"] = "Добавить авто";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <form asp-action="AddCar" method="post">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="BrandId">Марка</label>
                    <select asp-for="BrandId" class="form-control"
                            asp-items="@(new SelectList(ViewBag.Brands, "BrandId", "Name"))">
                        <option value="">Выберите марку</option>
                    </select>
                    <span asp-validation-for="BrandId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Model">Модель</label>
                    <input asp-for="Model" class="form-control" />
                    <span asp-validation-for="Model" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Year">Год выпуска</label>
                    <input asp-for="Year" class="form-control" />
                    <span asp-validation-for="Year" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Price">Цена ($)</label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Mileage">Пробег (км)</label>
                    <input asp-for="Mileage" class="form-control" />
                    <span asp-validation-for="Mileage" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CountryOrigin">Страна</label>
                    <select asp-for="CountryOrigin" class="form-control">
                        <option value="Европа">Европа</option>
                        <option value="США">США</option>
                        <option value="Корея">Корея</option>
                    </select>
                </div>


                <div class="form-group">
                    <label asp-for="Photos">Ссылки на фото (через запятую)</label>
                    <textarea asp-for="Photos" class="form-control" rows="3"
                              placeholder="https://example.com/photo1.jpg, https://example.com/photo2.jpg"></textarea>
                    <span asp-validation-for="Photos" class="text-danger"></span>


                    <<div class="form-group">
                        <label asp-for="Photos">Ссылки на фото (через запятую)</label>
                        <textarea asp-for="Photos" class="form-control" rows="3"
                                  placeholder="https://example.com/photo1.jpg, https://example.com/photo2.jpg"></textarea>
                        <span asp-validation-for="Photos" class="text-danger"></span>


                    </div>
                </div>
            </div>

            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary">Сохранить</button>
                <a asp-action="Cars" class="btn btn-secondary">Отмена</a>
            </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}



